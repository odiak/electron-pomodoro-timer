{
  "name": "electron-pomodoro-timer",
  "productName": "Electron Pomodoro Timer",
  "version": "0.0.0",
  "main": "main.js",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "package": "npm-run-all package:*",
    "package:mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --out=out"
  },
  "devDependencies": {
    "electron": "^1.8.3",
    "electron-packager": "^11.1.0",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.11.1"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": false,
    "allowFunctionParentheses": "always",
    "jsxBracketSameLine": false,
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "printWidth": 9999
        }
      }
    ]
  }
}
